
@media all and (min-width: 360px) and (max-width: 767px) {
    body {
        width: 100%;
        color: white;
        padding: 0;
        height: 100%;
    }
    header {
        /* changes background colour to aquamarine */
        background-color: aquamarine;
        /* changing width to 100% */
        width: 100%;
        /* changing height to 80px */
        height: 300px;
    }
    ul {
        /* changing width to 100% */
        width: 100%;
        /* changing margin top to 5px */
        margin-top: 5px;
    }
    li {
        /* setting display to inline block */
        display: inline-block;
        /* setting padding to 15px on left and 30px on top */
        padding: 15px 30px;
    }
    header nav li a {
        /* setting colour to black */
        color: black;
        /* setting text decoration to none */
        text-decoration: none;
        /* setting font size to 30px */
        font-size: 30px;
    }
    header nav li a:hover {
        /* setting backgrounf colout to dodgerblue */
        background-color: dodgerblue;
        /* padding: 3px; */
    }
    /* ANCHOR header 360px */
    .cont {
        /* setting background image  */
        background: url(/Pics/board.jpg) no-repeat center;
        /* setting background size to cover the division */
        background-size: cover;
        /* setting padding to 40px on left */
        padding: 40px;
    }
    .cont h1 {
        /* setting text align to center */
        text-align: center;
        /* setting colout to #ddd */
        color: #ddd;
    }
    .form {
        /* setting max-width to 600px */
        max-width: 600px;
        /* setting margin to auto  */
        margin: auto;
        /* setting padding top to 10px */
        padding: 0 10px 0px 0px;
        /* hides the overflow */
        overflow: hidden;
    }
    .cft {
        /* setting display type to block */
        display: block;
        /* setting width to 100% */
        width: 100%;
        /* setting type of box to border-box */
        box-sizing: border-box;
        /* setting margin to 15px on the left */
        margin: 15px 0;
        /* setting backgrounf to #1111 */
        background-color: rgba(255, 255, 255, 0.067);
        /* setting padding to 20px on the left and 40px on top */
        padding: 20px 40px;
        /* setting outilne to none */
        outline: none;
        /* setting colour to #ddd */
        color: rgb(13, 224, 196);
        /* setting transition time to 0.5s */
        transition: 0.6s;
    }
    .cft textarea {
        /* setting setting resize to none */
        resize: none;
        /* setting height to 130px */
        height: 130px;
    }
    .form-send {
        /* setting float to right */
        float: right;
        /* setting border to 0px */
        border: 0px;
        /* setting background to #34495e */
        background: #34495e;
        /* setting colour to #fff */
        color: #fff;
        /* setting padding to 15px on left and 45px on top */
        padding: 15px 45px;
        /* setting border radius to 30px */
        border-radius: 30px;
        /* setting pointer notice while hovering cursor */
        cursor: pointer;
        /* setting transition time to 0.5s */
        transition: 0.5s;
    }
    .form-send:hover {
        /* setting colour change to  #29b948*/
        background: #29b948;
    }
    /* headdddddddddddd---------------------------------------ddddddddd */
    footer ul {
        /* setting text alignment to center  */
        text-align: center;
        /* setting text overflow to inherit  */
        text-overflow: inherit;
        /* setting style of list type to none  */
        list-style-type: none;
    }
    footer ul li {
        /* setting text decoration to none  */
        text-decoration: none;
    }
}


